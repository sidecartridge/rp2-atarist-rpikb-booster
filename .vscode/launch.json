{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "SidecarTridge IKBD-Booster RP2040 Bootloader",
            "cwd": "${workspaceFolder}",
            "executable": "${command:cmake.launchTargetPath}",
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "openocd",
            // MDOFIFY THIS PATH TO MATCH YOUR SYSTEM
            // This may need to be arm-none-eabi-gdb depending on your system
            "gdbPath": "/Applications/ArmGNUToolchain/14.2.rel1/arm-none-eabi/bin/arm-none-eabi-gdb",
            "device": "RP2040",
            "configFiles": [
                "interface/cmsis-dap.cfg",
                "target/rp2040.cfg"
            ],
            "serverArgs": [
                "-c",
                "adapter speed 5000"
            ],
            "svdFile": "./pico-sdk/src/rp2040/hardware_regs/rp2040.svd",
            "runToMain": false, // Explicitly disable running to main
            "searchDir": [
                // MDOFIFY THIS PATH TO MATCH YOUR SYSTEM
                "${workspaceFolder}/../pico/openocd/tcl"
            ],
            "showDevDebugOutput": true,
            "liveWatch": {
                "enabled": true,
                "interval": 500
            }
        },
        {
            "name": "SidecarTridge IKBD-Booster RP2350 Bootloader",
            "cwd": "${workspaceFolder}",
            "executable": "${command:cmake.launchTargetPath}",
            "request": "launch",
            "type": "cortex-debug",
            "serverpath": "/Users/diego/mister_wkspc/pico/openocd-rp2350/src/openocd",
            "servertype": "openocd",
            // MDOFIFY THIS PATH TO MATCH YOUR SYSTEM
            // This may need to be arm-none-eabi-gdb depending on your system
            "gdbPath": "/usr/local/bin/arm-none-eabi-gdb",
            "device": "RP2350",
            "configFiles": [
                "interface/cmsis-dap.cfg",
                "target/rp2350.cfg"
            ],
            "svdFile": "pico-sdk/src/rp2350/hardware_regs/RP2350.svd",
            "runToEntryPoint": false,
            // Work around for stopping at main on restart
            "postRestartCommands": [
                "break main",
                "continue"
            ],
            "searchDir": [
                // MDOFIFY THIS PATH TO MATCH YOUR SYSTEM
                "${workspaceFolder}/../pico/openocd-rp2350/tcl"
            ],
            "serverArgs": [
                "-c",
                "adapter speed 5000"
            ],
            "showDevDebugOutput": "raw",
            "liveWatch": {
                "enabled": true,
                "interval": 500
            }
        }
    ]
}